<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/message_root_layout"
    style="@style/RowStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_chat_beginning"
        style="@style/TextViewSubNormalH2"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:padding="10dp"
        android:visibility="gone"
        android:text="This is the beginning of your direct message history with Klemen Selakovic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!--SEPARATOR-->
    <RelativeLayout
        android:id="@+id/container_time_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/text_time_divider"
            android:background="#F2F4F6" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/text_time_divider"
            android:background="#F2F4F6" />

        <TextView
            android:id="@+id/text_time_divider"
            style="@style/MessageDateStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="Time Today"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#7F94AC" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12"
            android:gravity="bottom">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_avatar"
                android:layout_width="38dp"
                android:layout_height="38dp"
                fresco:fadeDuration="0"
                fresco:failureImage="@drawable/icn_100_profile"
                fresco:placeholderImage="@drawable/icn_100_profile"
                fresco:roundAsCircle="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.88"
            android:gravity="start"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_time"
                    style="@style/MessageDateStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#7F94AC" />

                <RelativeLayout
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="5dp"
                    android:animateLayoutChanges="true"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:paddingRight="50dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/image_message_bubble"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/bubble_left_rounded2"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="5dp">

                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/image_icon"
                            android:layout_width="@dimen/message_icon_max_width"
                            android:layout_height="@dimen/message_icon_max_height"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginEnd="2dp"
                            android:layout_marginRight="2dp"
                            android:visibility="gone"
                            fresco:layout_constraintBottom_toBottomOf="parent"
                            fresco:layout_constraintEnd_toStartOf="@+id/text_content"
                            fresco:layout_constraintStart_toStartOf="parent"
                            fresco:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/text_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginEnd="0dp"
                            android:layout_marginRight="0dp"
                            android:autoLink="all"
                            android:gravity="start|center_vertical"
                            android:paddingStart="0dp"
                            android:paddingLeft="0dp"
                            android:paddingEnd="0dp"
                            android:paddingRight="0dp"
                            android:text=""
                            app:layout_constrainedWidth="true"
                            fresco:layout_constraintBottom_toBottomOf="parent"
                            fresco:layout_constraintEnd_toEndOf="parent"
                            fresco:layout_constraintStart_toEndOf="@+id/image_icon"
                            fresco:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/image_message_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        fresco:fadeDuration="0"
                        fresco:roundedCornerRadius="10dp" />

                    <LinearLayout
                        android:id="@+id/layout_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="start"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:gravity="start"
                        android:orientation="horizontal" />

                </RelativeLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


